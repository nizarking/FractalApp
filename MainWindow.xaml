<Window x:Class="DrawingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>

        <Canvas x:Name="myCanvas" HorizontalAlignment="Center" Height="420" VerticalAlignment="Center" Width="800">
           
        </Canvas>
         <Slider 
             x:Name="angleSlider" 
             ValueChanged="slider_valueChanged"
             HorizontalAlignment="Center" 
             VerticalAlignment="Top" Width="600" Maximum="360" Minimum="0"/>
    </Grid>
</Window>
